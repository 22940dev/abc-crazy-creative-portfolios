---
layout: base
pagination:
  data: collections.posts
  size: 10
  alias: posts
---

<div class="container">
    {% if posts.length %}
        <ol>
            {% for post in posts | reverse %}
                <li class="h-entry">
                    {% include "post.njk" %}
                </li>
            {% endfor %}
        </ol>

        {% if pagination.nextPageHref %}
            <nav>
                <a href="{{ pagination.nextPageHref }}">next page</a>
            </nav>
        {% endif %} 
    {% else %}
        <p>No Posts yet.</p>
    {% endif %}
</div>